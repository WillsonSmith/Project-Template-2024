{
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 80,
  "singleQuote": true,
  "arrowParens": "always",
  "trailingComma": "all",
  "semi": true,
  "importOrder": [
    "^lit(.*)$",
    "^lit/(.*)$",
    "^@lit(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^@/db(.*)$",
    "^@/server(.*)$",
    "^@/api(.*)$",
    "^@/util(.*)$",
    "^@/controllers(.*)$",
    "@/styles(.*)$",
    "^@/shoelace(.*)$",
    "^@/(components|fc)(.*)$",
    "^./(.*)$",
    "^@/(.*)$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderParserPlugins": ["typescript", "jsx", "decorators"],
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
